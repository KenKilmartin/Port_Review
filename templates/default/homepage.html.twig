{% extends 'base.html.twig' %}

{% block body %}
    <h1>home page</h1>

    <p>
        welcome to the home page !!
    </p>

    {% for port in ports %}
        <div id="merch">
        <table>
        <thead>
        <tr>

            <th>Name</th>
            <th>Photo</th>
            <th>Description</th>
            <th>Ingredients</th>
            <th>Price</th>
            <th>Reviews</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>{{ port.portName }}</td>
            <td><img class="items"  src="/images/{{ port.photo }}"> </td>
            <td>{{ port.description }}</td>
            <td>{{ port.ingredients }}</td>
