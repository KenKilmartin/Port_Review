{% extends 'base.html.twig' %}

{% block title %}Port index{% endblock %}

{% block body %}

    <h1>Port index</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for port in ports %}
            <tr>
                <td>{{ port.id }}</td>
                <td>
                    <a href="{{ path('port_show', {'id': port.id}) }}">show</a>
                    <a href="{{ path('port_edit', {'id': port.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('port_new') }}">Create new</a>

{% endblock %}