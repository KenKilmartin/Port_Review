{% extends 'base.html.twig' %}

{% block title %}Port{% endblock %}

{% block body %}

    <h1>Port</h1>

    <table>
        <tr>
            <th>Id</th>
            <td>{{ port.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ port.name }}</td>
        </tr>
        <tr>
            <th>Photo</th>
            <td>{{ port.photo }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ port.description }}</td>
        </tr>
        <tr>
            <th>Ingrediants</th>
            <td>{{ port.ingrediants }}</td>
        </tr>
        <tr>
            <th>PriceRange</th>
            <td>{{ port.priceRange }}</td>
        </tr>

    </table>

    <a href="{{ path('port_index') }}">back to list</a>

    <a href="{{ path('port_edit', {'id': port.id}) }}">edit</a>

    {% include 'port/_delete_form.html.twig' with {'identifier': port.id} only %}

{% endblock %}