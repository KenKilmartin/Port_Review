{% extends 'base.html.twig' %}

{% block title %}Edit Port{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <h1>Edit Port</h1>

        {% include 'port/_form.html.twig' with {'form': form, 'button_label': 'Edit'} only %}

        <a href="{{ path('port_index') }}">back to list</a>

        {% include 'port/_delete_form.html.twig' with {'identifier': port.id} only %}
    {% endif %}
    {% if is_granted('ROLE_ADMIN') == false %}

        <h1 style="margin-left:  30%"> You don't belong here !</h1>
        <img style="margin-left:  45%" class="items"  src="/images/dbh.png" alt="Dont belong here">
    {% endif %}

{% endblock %}